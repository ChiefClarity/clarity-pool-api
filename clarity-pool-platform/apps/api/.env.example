# Supabase Database Configuration
# Get this from Supabase Dashboard > Settings > Database > Connection string (Transaction mode)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres?pgbouncer=true"

# Alternative: Direct connection (not recommended for serverless)
# DIRECT_URL="postgresql://postgres.[project-ref]:[password]@db.[project-ref].supabase.co:5432/postgres"

# Third-party APIs
POOLBRAIN_API_URL="https://api.poolbrain.com"
POOLBRAIN_API_KEY="your-poolbrain-api-key"

# Authentication
JWT_SECRET="your-jwt-secret-key-min-32-chars"

# Environment
NODE_ENV="development"
PORT=3000

# Optional: Supabase Service Role Key (for admin operations)
# SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Rate Limiting
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
RATE_LIMIT_BYPASS_TOKENS=internal-service-token-1,internal-service-token-2

# For development without Redis
RATE_LIMIT_USE_MEMORY=true

